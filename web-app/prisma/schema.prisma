// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Processing jobs table
model ProcessingJob {
  id           String   @id @default(uuid())
  imagePath    String
  originalName String?  // Original filename for JSON export
  fileId       String?  // UUID filename  
  status       String   // pending, processing, completed, failed
  createdAt    DateTime @default(now())
  completedAt  DateTime?

  // Relations
  ocrResult        OcrResult?
  extractionResult ExtractionResult?
  trainingData     TrainingData?

  @@map("processing_jobs")
}

// OCR results table
model OcrResult {
  id               String @id @default(uuid())
  jobId            String @unique
  fullText         String?
  textLines        String // JSON
  confidence       Float?
  detectedLanguage String?
  processingTime   Int?

  // Relations
  job ProcessingJob @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@map("ocr_results")
}

// Extraction results table
model ExtractionResult {
  id                       String    @id @default(uuid())
  jobId                    String    @unique
  extractedData            String    // JSON ExtractionResult
  confidence               Float?
  needsVerification        Boolean   @default(false)
  isVerified               Boolean   @default(false)
  verifiedAt               DateTime?
  verifiedData             String?   // JSON verified data
  
  // Document type classification
  documentType             String?   // receipt, invoice, unknown
  documentTypeConfidence   Float?
  documentTypeReason       String?
  receiptScore             Float?
  invoiceScore             Float?
  
  // Invoice specific fields
  dueDate                  DateTime?
  paymentTerms             String?
  billToName               String?
  billToAddress            String?
  billingAddress           String?
  
  // Receipt specific fields
  transactionId            String?
  customerCopy             Boolean   @default(false)

  // Relations
  job ProcessingJob @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@map("extraction_results")
}

// Training data table
model TrainingData {
  id            String    @id @default(uuid())
  jobId         String    @unique
  rawData       String?   // JSON raw data
  verifiedData  String?   // JSON verified data
  features      String?   // JSON feature vectors
  labels        String?   // JSON label data
  isGroundTruth Boolean   @default(false)
  createdAt     DateTime  @default(now())

  // Relations
  job ProcessingJob @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@map("training_data")
}